# Komari Environment Configuration Example
# Copy this file to .env and modify the values according to your setup

# Basic server configuration
KOMARI_LISTEN=0.0.0.0:25774

# Database configuration (optional, defaults to SQLite)
# KOMARI_DB_TYPE=sqlite
# KOMARI_DB_FILE=./data/komari.db

# For MySQL:
# KOMARI_DB_TYPE=mysql
# KOMARI_DB_HOST=localhost
# KOMARI_DB_PORT=3306
# KOMARI_DB_USER=komari
# KOMARI_DB_PASSWORD=your_password
# KOMARI_DB_NAME=komari

# Admin account configuration (optional)
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password

# Cloudflare Access Integration
# Enable automatic login through Cloudflare Access
KOMARI_CF_ACCESS_ENABLED=false

# Admin email for Cloudflare Access
# Only this email will be automatically logged in
# KOMARI_CF_ACCESS_ADMIN_EMAIL=admin@yourdomain.com

# Optional: Trusted Cloudflare Access domain
# Adds an extra layer of security by verifying the Access audience
# KOMARI_CF_ACCESS_TRUSTED_DOMAIN=your-team-name.cloudflareaccess.com

# Cloudflared tunnel (optional)
# KOMARI_ENABLE_CLOUDFLARED=false
